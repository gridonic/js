{
  "name": "@gridonic/js",
  "version": "1.0.0",
  "description": "ES6+ and Browserify",
  "config": {
    "browserify": "./src/App.js -o build/app.js -t [ babelify --presets [ es2015 ] ] -t [ browserify-ejs ] -t [ browserify-shim ] -t [ deamdify ]"
  },
  "scripts": {
    "build": "browserify $npm_package_config_browserify",
    "build:prod": "npm run build && uglifyjs --compress --mangle -o ./build/app.js -- ./build/app.js",
    "watch": "watchify $npm_package_config_browserify --verbose",
    "test": "npm run build -- > /dev/null && echo ✔︎  OK"
  },
  "author": "Gridonic <hello@gridonic.ch>",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "browserify-ejs": "^0.0.2",
    "browserify-shim": "^3.8.13",
    "deamdify": "^0.3.0",
    "uglify-js": "^2.8.15",
    "watchify": "^3.9.0"
  },
  "dependencies": {},
  "browser": {},
  "browserify-shim": {},
  "private": true
}
